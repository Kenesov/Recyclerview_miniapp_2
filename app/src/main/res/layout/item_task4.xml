<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardElevation="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="14dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:cardCornerRadius="4dp"
            >
            <View
                android:id="@+id/img_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/task3_img1"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Grand Tour of European"
            app:layout_constraintStart_toEndOf="@id/card_img"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/text_name"
            android:layout_marginStart="24dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/task3_saved_true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/icon_isActiv"
            />

        <LinearLayout
            android:id="@+id/container_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_name"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/task3_icon_start_yellow"
                android:layout_marginHorizontal="4dp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/task3_icon_start_yellow"
                android:layout_marginHorizontal="4dp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/task3_icon_start_yellow"


                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/task3_icon_start_yellow"
                android:layout_marginHorizontal="4dp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/task3_icon_start"
                android:layout_marginHorizontal="4dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="11 days"
            android:textSize="14sp"
            android:id="@+id/text_time"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/task4_icon_location"
            android:text="  Costa Rica"
            android:textSize="14sp"
            android:id="@+id/text_city_name"
            app:layout_constraintTop_toBottomOf="@id/text_name"
            app:layout_constraintStart_toStartOf="@id/text_name"
            app:layout_constraintBottom_toTopOf="@id/container_stars"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>