<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="2dp"
    >

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginStart="14dp"
       android:layout_marginTop="14dp"
       android:background="@drawable/bg_rounded"
       android:id="@+id/card_container"
       android:padding="10dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:cardElevation="6dp"
       app:cardCornerRadius="2dp"
       >
       <ImageView
           android:id="@+id/icon_like"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/like_svgrepo_com"
           app:layout_constraintEnd_toEndOf="parent"
           tools:ignore="MissingConstraints" />

       <ImageView
           android:id="@+id/img"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:src="@drawable/burger"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toBottomOf="@id/icon_like"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Bacon Burger"
           android:textStyle="bold"
           android:textColor="@color/black"
           app:layout_constraintTop_toBottomOf="@id/img"
           app:layout_constraintStart_toStartOf="@id/img"
           android:textSize="16sp"
           android:id="@+id/text_name"
           />
       <TextView
           android:id="@+id/text_wq"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="yahoo comida"
           app:layout_constraintBottom_toTopOf="@id/text_er"
           android:layout_marginVertical="8dp"
           android:textSize="12sp"
           app:layout_constraintTop_toBottomOf="@id/text_name"
           app:layout_constraintStart_toStartOf="@id/text_name"
           />

       <TextView
           android:id="@+id/text_er"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="r 150"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="@id/text_name"
           app:layout_constraintTop_toBottomOf="@id/text_wq"
           android:textSize="14sp"
           android:textColor="@color/black"
           android:textStyle="bold"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="40% off"
           android:textColor="#f00a6d"
           android:textSize="14sp"
           app:layout_constraintStart_toEndOf="@id/text_er"
           app:layout_constraintTop_toTopOf="@id/text_er"
           android:layout_marginStart="6dp"
           />

       <LinearLayout
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingVertical="4dp"
           android:paddingHorizontal="16dp"
           android:background="@drawable/bg_style"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="ADD"
               android:textColor="#39db30"
               android:textSize="10sp"
               />

       </LinearLayout>


   </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:src="@drawable/long_green_flag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>